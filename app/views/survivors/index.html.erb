<div class="survivors">

  <h1>Listing survivors</h1>

  <div class="large-10 columns">
    <table>
      <thead>
      <tr>
        <th>Name</th>
        <th></th>
        <th>Age</th>
        <th>Residence</th>
        <th>Tribe</th>
        <th>Fantasy</th>
        <th>Elimination number</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @survivors.each do |survivor| %>
          <tr>
            <td><strong><%= survivor.name %></strong></td>
            <td></strong><%= image_tag survivor.photo_url %></td>
            <td><%= survivor.age %></td>
            <td><%= survivor.residence %></td>
            <td>
              <% survivor.tribes.each do |tribe| %>
                  <p><%= tribe.name %></p>
              <% end %>
            </td>
            <td><%= survivor.fantasy %></td>
            <td><%= survivor.elimination_number %></td>
            <td><%= link_to 'Show', survivor %></td>
            <td><%= link_to 'Edit', edit_survivor_path(survivor) %></td>
            <td><%= link_to 'Destroy', survivor, method: :delete, data: {confirm: 'Are you sure?'} %></td>
          </tr>
      <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Survivor', new_survivor_path %>
  </div>

  <div class="large-2 columns">
    <%= form_tag(search_survivors_url, method: 'get') do %>
        <%= label_tag(:q, "Search for survivors:") %>
        <%= text_field_tag(:q) %>
        <%= submit_tag("Search") %>
    <% end %>
    <div id="results"></div>
    <br/>
  </div>
</div>