<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @player.name %>
</p>

<p>
  <strong>Points:</strong>
  <%= @player.points %>
</p>

<p>
  <strong>Place:</strong>
  <%= @player.place %>
</p>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Tribe</th>
    <th>Elimination number</th>
    <th>Photo url</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @player.survivors.each do |survivor| %>
      <tr>
        <td><%= survivor.name %></td>
        <td><%= survivor.tribe.name %></td>
        <td><%= survivor.elimination_number %></td>
        <td><%= survivor.photo_url %></td>
        <td><%= link_to 'Show', survivor %></td>
        <td><%= link_to 'Edit', edit_survivor_path(survivor) %></td>
        <td><%= link_to 'Destroy', survivor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>


<%= link_to 'Edit', edit_player_path(@player) %> |
<%= link_to 'Back', players_path %>
