<%= simple_form_for(@player) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :points %>
    <%= f.input :place %>
    <%= f.input :wins %>
    <%= f.input :losses %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
